<h1>Review already exists!  Update?</h1>

<%= form_for [@store,@review] do |r| %>

<p>
	<%= r.text_field :rating, placeholder: 'Rating' %>
</p>

<p>
	<%= r.text_field :body, placeholder: 'Review' %>
</p>

<p>
	<%= r.submit %>
</p>

<p>
	<%= button_to "Destroy Review", "/reviews/:id", method: :delete %>
</p>

<% end %>

review id: <%= @review._id %>